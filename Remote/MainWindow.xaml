<Window x:Class="Remote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="통신지연자료처리" Height="660" Width="840">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="310*"/>
            <RowDefinition Height="350*"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Width="815" Height="290" Header="Attribute"></GroupBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320*"/>
                <ColumnDefinition Width="320*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Width="400" Height="300" BorderBrush="#FFCCCCCC" BorderThickness="1">
                <Canvas Width="400" Height="300">
                    <TextBlock Margin="10 0 0 0">탄착지</TextBlock>
                </Canvas>
            </Border>
            <Border Grid.Column="1" Width="400" Height="300" BorderBrush="#FFCCCCCC" BorderThickness="1">
                <Canvas Width="400" Height="300">
                    <TextBlock Margin="10 0 0 0">발사 통제소</TextBlock>
                </Canvas>
            </Border>
        </Grid>        
    </Grid>
</Window>
